<Window x:Class="Ders16_Paneller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ders16_Paneller"
        mc:Ignorable="d" FontSize="24"
        Title="MainWindow" Height="450" Width="800">

    <Canvas Background="LightGray">
        <Rectangle Fill="Red"
                   Canvas.Right="0" Canvas.Top="0"
                   Width="80" Height="80"/>

        <Ellipse Fill="Blue" Width="120" Height="120"
                 Canvas.Left="90" Canvas.Bottom="90"/>

        <Line Stroke="Yellow" StrokeThickness="4" 
              X1="0" Y1="0" X2="600" Y2="400"/>
    </Canvas>
</Window>
